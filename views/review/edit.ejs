<h1><%= title %></h1>

<% if (messages && typeof messages === "function") { %>
  <div class="flash-message"><%- messages() %></div>
<% } %>

<main id="edit-review-page">
  <section class="edit-review-panel">
    <p class="edit-review-note">ALL FIELDS ARE REQUIRED.</p>

    <form action="/review/update" method="post" class="edit-review-form" novalidate>
      <div class="edit-review-row">
        <label for="review_date">Review Date</label>
        <input
          id="review_date"
          type="text"
          value="<%= new Date(review.review_date).toLocaleDateString() %>"
          readonly
        >
      </div>

      <div class="edit-review-row">
        <label for="review_text">Review Text</label>
        <textarea id="review_text" name="review_text" required><%= review.review_text %></textarea>
      </div>

      <input type="hidden" name="review_id" value="<%= review.review_id %>">
      <input type="hidden" name="inv_id" value="<%= review.inv_id %>">

      <button type="submit" class="update-btn">Update</button>
    </form>
  </section>
</main>

